<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".page.MainActivity"
        android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_above="@id/vStart" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/vStart"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_above="@id/vShowTime"
            android:text="Start"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/vShowTime"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_above="@id/v2PartPower"
            android:text="显示时间戳"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/v2PartPower"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="46dp"
            android:text="计算各部分功耗"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            />

</RelativeLayout>